// Place your settings in this file to overwrite the default settings
{
    "files.trimTrailingWhitespace": true,
    "editor.fontSize": 12,
    "editor.tabSize": 4,
    "editor.minimap.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "workbench.iconTheme": "vs-seti",
    "workbench.activityBar.visible": false,
    "window.menuBarVisibility": "toggle",

    "go.formatOnSave": true,
    "go.lintOnSave": "off",
    "go.enableCodeLens": {
        "references": false,
        "runtest": false
    },
    "go.autocompleteUnimportedPackages": true,
    "go.vetFlags": ["-printfuncs", "Debugf,Infof,Warnf,Errorf,Fatalf,Panicf"],

    "python.pythonPath": "${env.HOME}/.virtualenvs/env/bin/python3",
    "python.autoComplete.extraPaths": [
        "${env.HOME}/.virtualenvs/env/lib/python3.4"
    ],
    "python.linting.enabled": false,

    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.markEditorSelection": false,
    "markdown.preview.scrollPreviewWithEditorSelection": false,

    "extensions.autoUpdate": true,
    "workbench.startupEditor": "newUntitledFile"
}
