// Place your settings in this file to overwrite the default settings
{
    "files.trimTrailingWhitespace": true,
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Noto Sans Mono CJK JP Regular', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "workbench.iconTheme": "vs-seti",
    "workbench.activityBar.visible": false,
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "extensions.autoUpdate": true,
    "explorer.confirmDragAndDrop": false,

    "go.lintOnSave": "off",
    "go.enableCodeLens": {
        "references": false,
        "runtest": false
    },
    "go.autocompleteUnimportedPackages": true,
    "go.vetFlags": [
        "-printfuncs",
        "Debugf,Infof,Warnf,Errorf,Fatalf,Panicf"
    ],

    "python.pythonPath": "${env.HOME}/.virtualenvs/env/bin/python3",
    "python.autoComplete.extraPaths": [
        "${env.HOME}/.virtualenvs/env/lib/python3.5"
    ],
    "python.linting.enabled": false,
    "python.linting.enabledWithoutWorkspace": false,

    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.markEditorSelection": false,
    "markdown.preview.scrollPreviewWithEditorSelection": false,

    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
}
